{% include 'base/header.html.twig' %}

    <main>
        <div class="container">
            <h1>Departments</h1>
            <p><a href="index.php?controller=departments&action=new&id={{ department.id }}">Add a new department</a></p>
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>University Name</th>
                    <th>Actions</th>
                </tr>
                {% for department in departments %}
                    <tr>
                        <td>{{ department.id }}</td>
                        <td>{{ department.departmentName }}</td>
                        <td>{{ department.universityName }}</td>
                        <td><a href="index.php?controller=departments&action=edit&id={{ department.id }}">edit</a> <a href="index.php?controller=departments&action=delete&id={{ department.id }}">delete</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </main>

