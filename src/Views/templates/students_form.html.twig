{% include 'base/header.html.twig' %}

    <main>
        <div class="container">
            <h1>Student Form</h1>
            <form method="POST" action="#">
                <div class="row">
                    <label for="first-name">First Name:</label>
                    <input class="form-control" type="text" id="first-name" name="first_name" value="{{ first_name }}">
                </div>
                <div class="row">
                    <label for="last-name">Last Name:</label>
                    <input class="form-control" type="text" id="last-name" name="last_name" value="{{ last_name }}">
                </div>
                <div class="row">
                    <label for="email">Email:</label>
                    <input class="form-control" type="text" id="email" name="email" value="{{ email }}">
                </div>
                <div class="row">
                    <input class="btn btn-default" type="submit" value="Create">
                </div>
            </form>
        </div>
    </main>

